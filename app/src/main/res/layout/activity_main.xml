                <!--<View-->
                    <!--android:id="@+id/comment2"-->
                    <!--android:layout_width="350dp"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:background="#FFFFFF" />-->

                <!--<View-->
                    <!--android:id="@+id/comment3"-->
